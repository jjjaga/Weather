<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.WeatherActivity">

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.jaguar.weather.view.FragmentWeatherSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_weather_select" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.jaguar.weather.view.FragmentWeatherList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_list_weather" />

</LinearLayout>
